{
  "name": "tangrams-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun --filter tangrams build",
    "dev:cli": "bun --filter tangrams dev",
    "dev:docs": "bun --filter docs dev",
    "lint": "biome check --diagnostic-level=error",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "test": "bun --filter tangrams test",
    "test:coverage": "bun --filter tangrams test:coverage",
    "typecheck": "bun --filter '*' typecheck",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun --filter tangrams build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@changesets/cli": "^2.29.8",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.15"
}
