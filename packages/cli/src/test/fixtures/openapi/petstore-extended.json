{
  "openapi": "3.0.3",
  "info": {
    "title": "Pet Store Extended API",
    "description": "Extended Pet Store API for comprehensive testing",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "https://api.petstore.example.com/v2"
    }
  ],
  "paths": {
    "/pets": {
      "get": {
        "operationId": "listPets",
        "summary": "List all pets",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "active",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "tags",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of pets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Pet"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pets/{petId}": {
      "get": {
        "operationId": "getPet",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The pet",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          }
        }
      }
    },
    "/search": {
      "post": {
        "operationId": "searchPets",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchCriteria"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pet": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "website": {
            "type": "string",
            "format": "uri"
          },
          "ipAddress": {
            "type": "string",
            "format": "ipv4"
          },
          "ipv6Address": {
            "type": "string",
            "format": "ipv6"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "birthDate": {
            "type": "string",
            "format": "date"
          },
          "feedingTime": {
            "type": "string",
            "format": "time"
          },
          "age": {
            "type": "integer",
            "nullable": true
          },
          "weight": {
            "type": "number",
            "nullable": true
          },
          "isActive": {
            "type": "boolean"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          },
          "attributes": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "special-name": {
            "type": "string"
          }
        }
      },
      "SearchCriteria": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "query": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "filters": {
                "type": "object",
                "properties": {
                  "minAge": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        ]
      },
      "SearchResult": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "pets": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "error": {
                "type": "string"
              }
            }
          }
        ]
      },
      "FlexibleResponse": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "number"
          },
          {
            "type": "object",
            "properties": {
              "value": {
                "type": "string"
              }
            }
          }
        ]
      },
      "Status": {
        "type": "string",
        "enum": ["active", "inactive", "pending"],
        "nullable": true
      },
      "RecordType": {
        "type": "object",
        "additionalProperties": {
          "type": "integer"
        }
      },
      "MixedObject": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "additionalProperties": {
          "type": "string"
        }
      },
      "InferredObject": {
        "properties": {
          "value": {
            "type": "string"
          }
        }
      },
      "DictionaryOnly": {
        "additionalProperties": {
          "type": "boolean"
        }
      },
      "UnknownType": {
        "description": "Schema with no type"
      },
      "SingleAllOf": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        ]
      },
      "SingleOneOf": {
        "oneOf": [
          {
            "type": "string"
          }
        ]
      },
      "SingleAnyOf": {
        "anyOf": [
          {
            "type": "number"
          }
        ]
      }
    }
  }
}
